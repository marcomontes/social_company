.widget.wgreen
  .widget-head
    .pull-left INICIAR SESION
    .widget-icons.pull-right
      %a.wminimize{:href => "#"}
        %i.fa.fa-chevron-up
      %a.wclose{:href => "#"}
        %i.fa.fa-times
    .clearfix
  .widget-content
    .padd
      %br
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal", :role => "form"}) do |f| 
        .form-group
          %label.col-lg-2.control-label Nombre
          .col-lg-5
            = f.text_field :name, class: "form-control", placeholder: "Nombre", required: "required"

        .form-group
          %label.col-lg-2.control-label E-mail
          .col-lg-5
            = f.email_field :email, autofocus: true, class: "form-control", placeholder: "e-mail", required: "required"

        .form-group
          %label.col-lg-2.control-label Password
          .col-lg-5
            = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password", required: "required"

        .form-group
          %label.col-lg-2.control-label Confirmar Password
          .col-lg-5
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "password confirmation", required: "required"

        .form-group
          .col-lg-offset-2.col-lg-6
            %button.btn.btn-sm.btn-primary{type: "submit"} INGRESAR

  .widget-foot
    = render "devise/shared/links"
