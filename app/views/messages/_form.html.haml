= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :category_id_integer
    = f.text_field :category_id_integer
  .field
    = f.label :visibility
    = f.number_field :visibility
  .field
    = f.label :group_ids
    = f.text_area :group_ids
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
