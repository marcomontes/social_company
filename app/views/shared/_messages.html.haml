.widget
  / Widget title
  .widget-head
    .pull-left
      = msg.user_name
    .clearfix
  .widget-content
    / Widget content
    .padd
      = raw msg.body

      %hr
      .row
        .col-md-2
          Categor√≠a:
          %span.label.label-success
            = msg.category_name
        .col-md-2
          Grupos:
          - message_groups(msg).each do |group|
            %span.label.label-info
              = group.name
            &nbsp;
        .col-md-8
    / Widget footer
    .widget-foot
      .pull-right
        %small= msg.created_at.localtime
      .clearfix
