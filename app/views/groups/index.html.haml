= link_to "NUEVO GRUPO", new_group_path, class: "btn btn-sm btn-success"

.widget
  .widget-head
  .widget-content
    .table-responsive
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th GRUPO
            %th USUARIOS
            %th OPCIONES
        %tbody
          - @groups.each do |group|
            %tr
              %td= group.name
              %td
                - if group.users.any?
                  = users_sentence(group)
              %td
                = link_to edit_group_path(group), class: "button btn btn-xs btn-warning" do
                  %i.fa.fa-pencil
                = link_to group_path(group), method: :delete, :data => { :confirm => 'Est√° seguro?' }, class: "button btn btn-xs btn-danger" do
                  %i.fa.fa-times
          
    .widget-foot
